<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="1sp"
    android:background="@color/match5">

    <RelativeLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        >

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:fontFamily="@font/font_used"
            android:text="@string/time"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="169dp"
            android:layout_marginEnd="217dp"
            android:layout_toStartOf="@+id/textLevel"
            android:layout_toEndOf="@+id/textTime"
            android:fontFamily="@font/font_used"
            android:text="@string/score"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="83dp"
            android:layout_marginRight="200sp"
            android:layout_toStartOf="@+id/music"
            android:fontFamily="@font/font_used"
            android:text="@string/level"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-71dp"
            android:background="#00FFC0CB"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="0dp"
            android:paddingVertical="2dp"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:tint="@color/match1" />

        <top.androidman.SuperButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:paddingHorizontal="15sp"
            android:paddingVertical="8sp"
            app:color_normal="@color/match2"
            app:color_pressed="@color/match5"
            app:corner="10sp"
            app:text="@string/stop"
            app:textColor="@color/match1"
            app:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginVertical="1sp"
        >



    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>